extends layout

block content
    h1= title
    form#formAddUser(name="adduser", method="post", action="/adduser")
        input#inputUserName(type="text", placeholder="username", name="username")
        input#inputUserEmail(type="text", placeholder="useremail", name="email")
        input#inputUserPassword(type="password", placeholder="", name="password")
        button#btnSubmit(type="submit") submit

